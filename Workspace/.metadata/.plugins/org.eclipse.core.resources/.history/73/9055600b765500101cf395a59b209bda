// src/main/java/com/example/demo/dto/PlayerState.java
package com.example.demo.dto;

public class PlayerState {
    private String id;
    private Position position;
    private double rotationY;
    private String sessionId; // 세션 ID 추가

    // Constructors
    public PlayerState() {}

    public PlayerState(String id, Position position, double rotationY, String sessionId) {
        this.id = id;
        this.position = position;
        this.rotationY = rotationY;
        this.sessionId = sessionId;
    }

    // Getters
    public String getId() {
        return id;
    }

    public Position getPosition() {
        return position;
    }

    public double getRotationY() {
        return rotationY;
    }

    public String getSessionId() {
        return sessionId;
    }

    // Setters
    public void setId(String id) {
        this.id = id;
    }

    public void setPosition(Position position) {
        this.position = position;
    }

    public void setRotationY(double rotationY) {
        this.rotationY = rotationY;
    }

    public void setSessionId(String sessionId) {
        this.sessionId = sessionId;
    }

    // Nested Position class (public static으로 정의되어야 함)
    public static class Position {
        private double x;
        private double y;
        private double z;

        // Constructors
        public Position() {}

        public Position(double x, double y, double z) {
            this.x = x;
            this.y = y;
            this.z = z;
        }

        // Getters
        public double getX() {
            return x;
        }

        public double getY() {
            return y;
        }

        public double getZ() {
            return z;
        }

        // Setters
        public void setX(double x) {
            this.x = x;
        }

        public void setY(double y) {
            this.y = y;
        }

        public void setZ(double z) {
            this.z = z;
        }
    }
}
