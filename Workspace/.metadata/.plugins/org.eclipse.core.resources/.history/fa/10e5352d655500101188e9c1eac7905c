package com.example.demo.controller;


import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

@RestController // 이 클래스가 RESTful 웹 서비스를 처리함을 나타냅니다.
public class HelloController {

 private static final Logger logger = LoggerFactory.getLogger(HelloController.class);

 @GetMapping("/api/hello") // 클라이언트에서 이 경로로 GET 요청을 보내면 이 메서드가 실행됩니다.
 public String hello() {
     logger.info("Hello from Spring Boot server!"); // 서버 콘솔에 "Hello!" 출력
     return "Hello from Spring Boot!"; // 클라이언트에 응답으로 보낼 메시지
 }
}