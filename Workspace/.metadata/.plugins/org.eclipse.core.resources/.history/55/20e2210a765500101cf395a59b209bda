// src/main/java/com/example/demo/dto/ObjectState.java
package com.example.demo.dto;

public class ObjectState {
    private String id; // 오브젝트의 고유 ID (클라이언트에서 부여)
    private Position position; // 오브젝트의 위치
    private Rotation rotation; // 오브젝트의 회전 (쿼터니언 또는 오일러)

    // Constructors
    public ObjectState() {}

    public ObjectState(String id, Position position, Rotation rotation) {
        this.id = id;
        this.position = position;
        this.rotation = rotation;
    }

    // Getters
    public String getId() {
        return id;
    }

    public Position getPosition() {
        return position;
    }

    public Rotation getRotation() {
        return rotation;
    }

    // Setters
    public void setId(String id) {
        this.id = id;
    }

    public void setPosition(Position position) {
        this.position = position;
    }

    public void setRotation(Rotation rotation) {
        this.rotation = rotation;
    }

    // Nested Position class (PlayerState의 Position과 동일하게)
    public static class Position {
        private double x;
        private double y;
        private double z;

        public Position() {}
        public Position(double x, double y, double z) {
            this.x = x;
            this.y = y;
            this.z = z;
        }

        public double getX() { return x; }
        public double getY() { return y; }
        public double getZ() { return z; }

        public void setX(double x) { this.x = x; }
        public void setY(double y) { this.y = y; }
        public void setZ(double z) { this.z = z; }
    }

    // Nested Rotation class (Three.js의 쿼터니언에 맞춤)
    public static class Rotation {
        private double x; // Quaterion X
        private double y; // Quaterion Y
        private double z; // Quaterion Z
        private double w; // Quaterion W

        public Rotation() {}
        public Rotation(double x, double y, double z, double w) {
            this.x = x;
            this.y = y;
            this.z = z;
            this.w = w;
        }

        public double getX() { return x; }
        public double getY() { return y; }
        public double getZ() { return z; }
        public double getW() { return w; }

        public void setX(double x) { this.x = x; }
        public void setY(double y) { this.y = y; }
        public void setZ(double z) { this.z = z; }
        public void setW(double w) { this.w = w; }
    }
}
